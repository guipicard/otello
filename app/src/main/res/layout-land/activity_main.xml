<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <TextView
            android:id="@+id/turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/current_player"
            android:textAlignment="center"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/turnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/turn"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/turnCircle1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/red_disc"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="25sp"></TextView>

            <ImageView
                android:id="@+id/turnCircle2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/red_disc"
                app:backgroundTint="@null" />

        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <include
            android:id="@+id/game"
            layout="@layout/grid"></include>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

    </LinearLayout>


    <ImageView
        android:id="@+id/player1Img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/red_disc"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/aiText1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/aiToggle1"
        android:layout_toRightOf="@id/aiToggle1"
        android:text="@string/ai_text"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/aiToggle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player1Img"></CheckBox>

    <TextView
        android:id="@+id/player1Txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/player1Img"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/player1Skip"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_below="@id/aiToggle1"
        android:text="@string/skip_turn" />

    <ImageView
        android:id="@+id/player2Img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/green_disc"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/aiText2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/aiToggle2"
        android:layout_toLeftOf="@id/aiToggle2"
        android:text="@string/ai_text"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/aiToggle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player2Img"
        android:layout_alignEnd="@id/player2Img"
        android:textAlignment="textEnd"></CheckBox>

    <TextView
        android:id="@+id/player2Txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/player2Img"
        android:text="2"
        android:textAlignment="textEnd"
        android:textSize="25sp" />

    <Button
        android:id="@+id/player2Skip"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_below="@id/aiToggle2"
        android:layout_alignParentRight="true"
        android:text="@string/skip_turn" />

    <ImageView
        android:id="@+id/player3Img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/aiToggle3"
        android:background="@drawable/blue_disc"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/aiText3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/aiToggle3"
        android:layout_toRightOf="@id/aiToggle3"
        android:text="@string/ai_text"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/player3Txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/player3Img"
        android:layout_toRightOf="@+id/player3Img"
        android:text="3"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/aiToggle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/player3Skip"
        android:layout_alignEnd="@id/player3Img"></CheckBox>

    <Button
        android:id="@+id/player3Skip"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="@string/skip_turn" />

    <ImageView
        android:id="@+id/player4Img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/aiToggle4"
        android:layout_alignParentRight="true"
        android:background="@drawable/yellow_disc"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/aiText4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/aiToggle4"
        android:layout_toLeftOf="@id/aiToggle4"
        android:text="@string/ai_text"
        android:textAlignment="textEnd"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/player4Txt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/player4Img"
        android:layout_toLeftOf="@+id/player4Img"
        android:text="4"
        android:textAlignment="textEnd"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/aiToggle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/player4Skip"
        android:layout_alignEnd="@id/player4Img"></CheckBox>

    <Button
        android:id="@+id/player4Skip"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/skip_turn" />

</RelativeLayout>